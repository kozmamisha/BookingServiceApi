<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Booking System</title>

    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
        crossorigin="anonymous"
    />
</head>
<body class="d-flex flex-column min-vh-100 bg-light text-dark">

<header class="bg-light text-dark shadow-sm">
    <nav class="navbar navbar-expand-lg container">
        <a class="navbar-brand fw-bold text-dark" href="/">Booking System</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Hotels">Hotels</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Bookings">Bookings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Auth/Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" href="/Auth/Register">Register</a>
                </li>
            </ul>
        </div>
    </nav>
</header>


<main class="flex-grow-1 container py-5">
    @RenderBody()
</main>

<footer class="bg-dark text-light py-4 mt-auto text-center">
    &copy; @DateTime.Now.Year BookingSystem
</footer>

@RenderSection("Scripts", required: false)

<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
    crossorigin="anonymous"></script>
</body>
</html>