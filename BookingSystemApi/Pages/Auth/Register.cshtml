@page
@model BookingSystemApi.Pages.Auth.Register

<div class="container py-5">
    <h1 class="mb-4">Register</h1>

    <div class="card shadow-sm p-4">
        <form method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Input.UserName" class="form-label">Username</label>
                <input asp-for="Input.UserName" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>
    </div>
</div>